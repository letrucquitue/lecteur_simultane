<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorYtb</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="countdown" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:progressBackgroundTint">#999999</item>
        <item name="android:progressTint">@color/colorYtb</item>
        <item name="android:colorControlActivated">@color/colorYtb</item>
    </style>

    <style name="title_properties">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="title_fragment">
        <item name="android:textColor">@color/colorYtb</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="subtitle">
        <item name="android:textColor">@color/colorYtb</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorYtb</item>
    </style>

</resources>
